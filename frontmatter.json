{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "default",
      "pageBundle": false,
      "previewPath": null,
      "fields": [
        {
          "title": "Title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "layout",
          "name": "layout",
          "type": "string",
          "default": "doc"
        },
        {
          "title": "editLink",
          "name": "editLink",
          "type": "boolean",
          "default": true
        },
        {
          "title": "footer",
          "name": "footer",
          "type": "boolean",
          "default": true
        },
        {
          "title": "lastUpdated",
          "name": "lastUpdated",
          "type": "boolean",
          "default": true
        },
        {
          "title": "description",
          "name": "description",
          "type": "string"
        },
        {
          "title": "header",
          "name": "header",
          "type": "string"
        },
        {
          "title": "logo",
          "name": "logo",
          "type": "string"
        },
        {
          "title": "author",
          "name": "author",
          "type": "string"
        },
        {
          "title": "date",
          "name": "date",
          "type": "datetime"
        },
        {
          "title": "tags",
          "name": "tags",
          "type": "tags"
        },
        {
          "title": "sidebar",
          "name": "sidebar",
          "type": "boolean"
        },
        {
          "title": "draft",
          "name": "draft",
          "type": "draft"
        }
      ]
    },
    {
      "name": "blogpost",
      "pageBundle": false,
      "fields": [
        {
          "title": "Title",
          "description": "The title of the blog post. Make it super short and flashy.",
          "name": "title",
          "type": "string"
        },
        {
          "title": "Description",
          "description": "Here's a brief summary of the blog post people are gonna read. This is used for SEO and embeds too.",
          "name": "description",
          "type": "string"
        },
        {
          "title": "Category",
          "description": "The cateogry this blog post should show up in. It's our way to split unrelated blog post sections apart.",
          "name": "category",
          "type": "choice",
          "multiple": false,
          "choices": [
            "news",
            "tutorials"
          ]
        },
        {
          "title": "Collection ID",
          "description": "The Collection identifier to order the blog post. Helps override the date-based sorting.",
          "name": "collectionid",
          "type": "number"
        },
        {
          "title": "Published?",
          "description": "Is this blog post publicly available?",
          "name": "published",
          "type": "boolean"
        },
        {
          "title": "Hidden?",
          "description": "Should this post not show up anywhere? (Still accessible with direct-links)",
          "name": "hidden",
          "type": "boolean"
        },
        {
          "title": "Show 'Join Us'?",
          "description": "Should we show 'Join Us' section with the 'Read More' list on this post?",
          "name": "showjoinus",
          "default": "true",
          "type": "boolean"
        },
        {
          "title": "Header",
          "description": "The background header image of the blog post. Recommended a higher resolution image, and make it WEBP.",
          "name": "header",
          "type": "image"
        },
        {
          "title": "Logo",
          "description": "An optional cool looking logo to make your blog post pop more.",
          "name": "logo",
          "type": "image"
        },
        {
          "title": "Author",
          "description": "The author of this blog post. Of course.",
          "name": "author",
          "type": "string"
        },
        {
          "title": "Date",
          "description": "The date and time(?) of when this blog post was posted.",
          "name": "date",
          "type": "datetime"
        },
        {
          "title": "Tags",
          "description": "One or multiple tags and keywords increasing chance to make it show up.",
          "name": "tags",
          "type": "tags"
        },
        {
          "title": "Layout",
          "description": "Blog post layout.",
          "name": "layout",
          "type": "string",
          "default": "news-layout",
          "hidden": true
        },
        {
          "title": "Sidebar?",
          "description": "Should the sidebar be displayed?",
          "name": "sidebar",
          "type": "boolean",
          "default": false,
          "hidden": true
        },
        {
          "title": "ContentType",
          "description": "The content type preset.",
          "name": "fmContentType",
          "type": "string",
          "default": "blogpost",
          "hidden": true
        }
      ]
    }
  ],
  "frontMatter.content.pageFolders": [
    {
      "title": "docs",
      "path": "[[workspace]]/docs"
    },
    {
      "title": "prefabs",
      "path": "[[workspace]]/docs/references/prefabs"
    },
    {
      "title": "loot",
      "path": "[[workspace]]/docs/references/loot"
    },
    {
      "title": "items",
      "path": "[[workspace]]/docs/references/items"
    },
    {
      "title": "hooks",
      "path": "[[workspace]]/docs/references/hooks"
    },
    {
      "title": "entities",
      "path": "[[workspace]]/docs/references/entities"
    },
    {
      "title": "blueprints",
      "path": "[[workspace]]/docs/references/blueprints"
    }
  ],
  "frontMatter.preview.host": "http://localhost:5173",
  "frontMatter.framework.startCommand": "npx vitepress dev docs",
  "frontMatter.website.host": "http://localhost:5173",
  "frontMatter.content.publicFolder": "[[workspace]]/docs/public/",
  "frontMatter.framework.id": "other"
}